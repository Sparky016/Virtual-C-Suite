    "item": [
        {
            "name": "Auth API",
            "item": [
                {
                    "name": "Health Check",
                    "request": {
                        "method": "GET",
                        "url": "http://localhost:3003/health"
                    }
                },
                {
                    "name": "Exchange Token",
                    "request": {
                        "method": "POST",
                        "url": "http://localhost:3003/auth/exchange",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"idToken\": \"YOUR_FIREBASE_ID_TOKEN\"\n}"
                        }
                    }
                },
                {
                    "name": "Get User (Session)",
                    "request": {
                        "method": "GET",
                        "url": "http://localhost:3003/auth/user"
                    }
                },
                {
                    "name": "Refresh Token",
                    "request": {
                        "method": "POST",
                        "url": "http://localhost:3003/auth/refresh",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"idToken\": \"YOUR_NEW_ID_TOKEN\"\n}"
                        }
                    }
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "url": "http://localhost:3003/auth/logout"
                    }
                }
            ]
        },
