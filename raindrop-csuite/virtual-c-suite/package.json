{
  "name": "virtual-c-suite",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "LiquidMetal AI app",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "start": "raindrop build deploy --start",
    "stop": "raindrop build stop",
    "restart": "raindrop build deploy --start",
    "dev:upload": "cross-env PORT=3000 tsx watch src/upload-api/local.ts",
    "dev:coord": "cross-env PORT=3001 tsx watch src/analysis-coordinator/local.ts",
    "dev:processor": "cross-env PORT=3002 tsx watch src/board-meeting-processor/local.ts",
    "dev:auth": "cross-env PORT=3003 START_LOCAL_SERVER=true tsx watch src/authentication/index.ts",
    "dev:all": "run-p dev:upload dev:coord dev:processor dev:auth",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "eslint . --max-warnings=0",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@hono/node-server": "^1",
    "@liquidmetal-ai/raindrop-framework": "0.12.0",
    "@modelcontextprotocol/sdk": "^1",
    "cookie": "^1.1.1",
    "dotenv": "^17.2.3",
    "firebase": "^12.6.0",
    "firebase-admin": "^13.6.0",
    "firebase-auth-cloudflare-workers": "^2.0.6",
    "hono": "^4",
    "jose": "^6.1.3",
    "kysely": "^0.27.2",
    "kysely-d1": "^0.3.0",
    "node-fetch": "^3.3.2",
    "posthog-node": "^5.17.2"
  },
  "devDependencies": {
    "@types/cookie": "^0.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.1.0",
    "firebase-tools": "^14.27.0",
    "npm-run-all": "^4.1.5",
    "shx": "^0.4.0",
    "ts-node": "^10",
    "tsx": "^4",
    "typescript": "^5.0.4",
    "typescript-eslint": "^8.7.0",
    "vitest": "^3.1.3"
  }
}
